<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="top"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:theme="@style/AppDialogTheme">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_padding_medium"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:background="@color/colorPrimary"
                />

            <View android:background="@color/colorPrimary"
                  android:layout_width="match_parent"
                  android:layout_height="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/item_padding_medium"
                android:paddingBottom="@dimen/item_padding_medium"
                android:paddingLeft="@dimen/item_padding_medium"
                android:paddingRight="@dimen/item_padding_medium"
                >


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_namesadd_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/edittext_namesadd_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_title"
                        android:singleLine="true"
                        android:inputType="text|textNoSuggestions"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_namesadd_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/edittext_namesadd_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_description"
                        android:gravity="top"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/item_padding_medium"
                android:layout_marginBottom="@dimen/item_padding_medium"
                android:layout_marginLeft="@dimen/item_padding_medium"
                android:gravity="end">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/ButtonTheme.Cancel"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/action_cancel"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/ButtonTheme"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/action_save"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>